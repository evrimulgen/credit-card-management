<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mzule.fantasyslide.app">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.github.mzule.fantasyslide.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.github.mzule.fantasyslide.app.MainActivity"
            android:label="首页">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.mzule.fantasyslide.app.UniversalActivity"
            android:theme="@style/UniversalTheme" />
        <activity android:name=".CreditCardActivity"></activity>

        <activity android:name="com.cooltechworks.creditcarddesign.CardEditActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".CreditCardViewActivity"></activity>
        <activity android:name=".CreditCardFormViewActivity"></activity>
        <activity android:name=".CalendarActivity"></activity>
        <activity android:name="com.github.mzule.fantasyslide.calendar.MaterialCalendarBasicActivity"></activity>
        <activity android:name="com.github.mzule.fantasyslide.calendar.BasicActivityDecorated"></activity>
        <activity android:name="com.github.mzule.fantasyslide.filepicker.MainActivity"></activity>
        <activity android:name="com.github.mzule.fantasyslide.camera.CameraActivity"></activity>
        <activity android:name="com.github.mzule.fantasyslide.weather.WeatherActivity"></activity>
        <activity android:name="com.github.mzule.fantasyslide.workout.WorkoutListActivity"></activity>
    </application>

</manifest>